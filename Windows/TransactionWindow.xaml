<Window x:Class="BudgetApp.Windows.TransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить транзакцию" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Тип транзакции" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox x:Name="TypeComboBox" Grid.Row="1" SelectionChanged="TypeComboBox_SelectionChanged">
            <ComboBoxItem Content="Доход" Tag="Income"/>
            <ComboBoxItem Content="Расход" Tag="Expense"/>
        </ComboBox>

        <TextBlock Grid.Row="2" Text="Сумма" FontWeight="Bold" Margin="0,15,0,5"/>
        <TextBox x:Name="AmountTextBox" Grid.Row="3" PreviewTextInput="AmountTextBox_PreviewTextInput"/>

        <TextBlock Grid.Row="4" Text="Описание" FontWeight="Bold" Margin="0,15,0,5"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="5"/>

        <TextBlock Grid.Row="6" Text="Дата" FontWeight="Bold" Margin="0,15,0,5"/>
        <DatePicker x:Name="DatePicker" Grid.Row="7" SelectedDateChanged="DatePicker_SelectedDateChanged"/>

        <TextBlock Grid.Row="8" Text="Категория" FontWeight="Bold" Margin="0,15,0,5"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="9" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" Click="Cancel_Click" Margin="0,0,10,0" Width="100"/>
            <Button Content="Сохранить" Click="Save_Click" Background="#4ECDC4" Foreground="White" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

