<Window x:Class="BudgetApp.Windows.BudgetLimitEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать лимит" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Категория" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="1" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="2" Text="Тип" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox x:Name="TypeComboBox" Grid.Row="3" SelectionChanged="TypeComboBox_SelectionChanged" Margin="0,0,0,15">
            <ComboBoxItem Content="Доход" Tag="Income"/>
            <ComboBoxItem Content="Расход" Tag="Expense"/>
        </ComboBox>

        <TextBlock Grid.Row="4" Text="Лимит (₽)" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="LimitTextBox" Grid.Row="5" PreviewTextInput="LimitTextBox_PreviewTextInput" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="6" Text="Период" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox x:Name="PeriodComboBox" Grid.Row="7" Margin="0,0,0,20">
            <ComboBoxItem Content="Неделя" Tag="Week"/>
            <ComboBoxItem Content="Месяц" Tag="Month" IsSelected="True"/>
            <ComboBoxItem Content="Год" Tag="Year"/>
        </ComboBox>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" Click="Cancel_Click" Margin="0,0,10,0" Width="100"/>
            <Button Content="Сохранить" Click="Save_Click" Background="#4ECDC4" Foreground="White" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

