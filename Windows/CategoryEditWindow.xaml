<Window x:Class="BudgetApp.Windows.CategoryEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать категорию" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Название" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="2" Text="Тип" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox x:Name="TypeComboBox" Grid.Row="3" SelectionChanged="TypeComboBox_SelectionChanged" Margin="0,0,0,15">
            <ComboBoxItem Content="Доход" Tag="Income"/>
            <ComboBoxItem Content="Расход" Tag="Expense"/>
        </ComboBox>

        <TextBlock Grid.Row="4" Text="Цвет" FontWeight="Bold" Margin="0,0,0,5"/>
        <Grid Grid.Row="5" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="ColorComboBox" Grid.Column="0" SelectionChanged="ColorComboBox_SelectionChanged">
                <ComboBoxItem Content="Красный" Tag="#FF6B6B"/>
                <ComboBoxItem Content="Зеленый" Tag="#4ECDC4"/>
                <ComboBoxItem Content="Голубой" Tag="#95E1D3"/>
                <ComboBoxItem Content="Розовый" Tag="#F38181"/>
                <ComboBoxItem Content="Фиолетовый" Tag="#AA96DA"/>
                <ComboBoxItem Content="Светло-розовый" Tag="#FCBAD3"/>
                <ComboBoxItem Content="Синий" Tag="#C7CEEA"/>
                <ComboBoxItem Content="Оранжевый" Tag="#FFA07A"/>
                <ComboBoxItem Content="Желтый" Tag="#FFD700"/>
            </ComboBox>
            <Rectangle x:Name="ColorPreview" Grid.Column="1" Width="50" Height="30" 
                       Stroke="#E0E0E0" StrokeThickness="1" Margin="10,0,0,0"/>
        </Grid>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" Click="Cancel_Click" Margin="0,0,10,0" Width="100"/>
            <Button Content="Сохранить" Click="Save_Click" Background="#4ECDC4" Foreground="White" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

