<Window x:Class="BudgetApp.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="340" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA">
    <Border Padding="20" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Создание учетной записи" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Имя пользователя" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" Height="32"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Пароль" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="32"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,10">
                <TextBlock Text="Повторите пароль" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Height="32"/>
            </StackPanel>

            <TextBlock Grid.Row="4" x:Name="ErrorText" Foreground="#FF6B6B" Visibility="Collapsed" Margin="0,5,0,0"/>

            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Отмена" Width="110" Margin="0,0,10,0" Click="Cancel_Click"/>
                <Button Content="Создать" Width="160" Background="#4ECDC4" Foreground="White" Click="Register_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

